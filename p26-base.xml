<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <sim include="Systems/views.xml">

    <description>Boeing P 26 Peashooter (YASim)</description>
    <author>Emmanuel BARANGER (3D/FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction> 1 </fuel-fraction>

    <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

    <startup>
      <splash-texture>Aircraft/Boeing-P26/p26-splash.png</splash-texture>
    </startup>

    <model>
      <path archive="y">Aircraft/Boeing-P26/Models/p26.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <sound>
      <path archive="y">Aircraft/Boeing-P26/Sounds/p26-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                      <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                      <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                      <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                      <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                      <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                      <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                      <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                      <!-- 7 color -->
        <int n="8" alias="/systems/electrical/outputs/nav-lights">  0 </int>  <!-- 8 nav-lights -->
        <int n="9" alias="/sim/model/lights/beacon/state">  false </int>      <!-- 9 strobe-lights -->
        <float n="0" alias="/sim/model/door-positions/crew/position-norm"/>
        <float n="1" alias="/sim/model/door-positions/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                         <!-- altitude for MP shadow -->
        <float n="3" alias="/position/altitude-ft"> 0 </float>                        <!-- altitude for Smoke/Trail -->
        <float n="4" alias="/engines/engine[0]/rpm"/>
        <float n="5" alias="/engines/engine[0]/cranking"/>
        <float n="6" alias="/gear/gear[0]/wow/"/>
        <float n="7" alias="/gear/gear[1]/wow/"/>
        <float n="8" alias="/gear/gear[2]/wow/"/>
        <float n="9" alias="/gear/gear[0]/rollspeed-ms"/>
        <float n="10" alias="/gear/gear[1]/rollspeed-ms"/>
        <float n="11" alias="/gear/gear[2]/rollspeed-ms"/>
        <!-- For Bombable -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>
        <string n="9" type="string" />
      </generic>
    </multiplay>
    
    <help include="Systems/help.xml"/>

    <menubar include="Dialogs/p26-menu.xml"/>

  </sim>
 
  <input include="Systems/p26-keyboard.xml"/>

  <instrumentation include="Systems/instrumentation.xml"/>
  
  <nasal>
    <doors>
      <file>Aircraft/Boeing-P26/Nasal/doors.nas</file>
    </doors>
    <guns>
      <file>Aircraft/Boeing-P26/Nasal/weapons.nas</file>
      <file>Aircraft/Boeing-P26/Nasal/revi.nas</file>
    </guns>
    <p26>
      <file>Aircraft/Boeing-P26/Nasal/light.nas</file>
      <file>Aircraft/Boeing-P26/Nasal/liveries.nas</file>
      <file>Aircraft/Boeing-P26/Nasal/immat.nas</file>
    </p26>
  </nasal>
  
</PropertyList>
